<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20.0" prefWidth="320" prefHeight="180" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.tinkoff.semenov.controllers.DirectoryCreatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Text text="Название папки" />
    <TextField fx:id="newDirField" text="Новая папка"/>
    <Text fx:id="invalidMessage" text="Недопустимое имя папки" fill="red" visible="false"/>
    <HBox alignment="BOTTOM_RIGHT" >
        <Button text="Создать" onAction="#onCreateNewDir"/>
        <Button text="Отмена" onAction="#cancelCreateNewDir"/>
    </HBox>
</VBox>
